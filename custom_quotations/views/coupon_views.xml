<odoo>
    <record id="view_coupon_list" model="ir.ui.view">
        <field name="name">coupon.coupon.list</field>
        <field name="model">coupon.coupon</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="value"/>
                <field name="usage_limit"/>
                <field name="used_count"/>
                <field name="state"/>
                <field name="date_availability"/>
                <field name="days_remaining"/>
            </list>
        </field>
    </record>

    <record id="view_coupon_form" model="ir.ui.view">
        <field name="name">coupon.coupon.form</field>
        <field name="model">coupon.coupon</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <labeL for="name">Coupon code</labeL>
                        <h2>
                            <field name="name"/>
                        </h2>
                    </div>
                    <group>

                        <group>


                            <field name="partner_id" widget="many2many_tags"/>
                            <field name="value"/>
                            <field name="usage_limit"/>
                            <field name="used_count"/>
                            <field name="days_remaining"/>

                        </group>
                        <group string="Applicable For">
                            <field name="state"/>
                            <field name="template_ids" widget="many2many_tags"/>
                            <field name="date_availability"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_coupon" model="ir.actions.act_window">
        <field name="name">Coupons</field>
        <field name="res_model">coupon.coupon</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_coupon" name="Coupons" parent="custom_quotation" action="action_coupon" sequence="10"/>
</odoo>