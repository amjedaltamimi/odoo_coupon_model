<odoo>
    <record id="view_quotation_template_form" model="ir.ui.view">
        <field name="name">quotation.template.form</field>
        <field name="model">quotation.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_quotation" string="Generate Quotation" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Template Lines">
                            <field name="template_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_quotation_template_list" model="ir.ui.view">
        <field name="name">quotation.template.list</field>
        <field name="model">quotation.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_quotation_template" model="ir.actions.act_window">
        <field name="name">Quotation Templates</field>
        <field name="res_model">quotation.template</field>
        <field name="view_mode">list,form</field>
    </record>

 <menuitem id="menu_quotation_template" name="Quotation Templates" parent="custom_quotation" action="action_quotation_template" sequence="1"/>
</odoo>