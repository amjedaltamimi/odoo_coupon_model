<odoo>
    <record id="view_order_form_inherit_coupon" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.coupon</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- تعديل زر الـ Confirm -->
            <xpath expr="//header/button[@name='action_confirm'][1]" position="attributes">
                <attribute name="invisible">coupon_id != False</attribute>
            </xpath>

            <!-- زر Apply Coupon -->
            <xpath expr="//header" position="inside">
                <button name="apply_coupon"
                        string="Apply Coupon"
                        type="object"
                        class="btn btn-primary"
                        invisible="coupon_id == False or state != 'draft'"/>
            </xpath>

            <!-- إضافة حقول الكوبون والقالب بعد الـ Partner -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="template_id" readonly="1"/>
                <field name="coupon_id" options="{'no_create': True}"/>
            </xpath>

            <!--  statusbar -->
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state"
                       widget="statusbar"
                       statusbar_visible="draft,applied_coupon,sent,sale,done,cancel"/>
            </xpath>

            <!-- إضافة الإجمالي قبل الكوبون -->
            <sheet position="inside">
                <div style="text-align: right; width: 100%; margin-top: 5px; font-size: 18px; color: #C0392B; font-weight: bold;">
                    <field name="total_before_coupon" readonly="1"/>
                </div>
            </sheet>

            <!-- 🔹 تعديل جدول المنتجات (order_line) -->
            <xpath expr="//field[@name='order_line']/list" position="inside">
                <field name="total_before_discount" readonly="1"/>
                <field name="discount_difference" readonly="1"/>
            </xpath>

        </field>
    </record>
</odoo>
